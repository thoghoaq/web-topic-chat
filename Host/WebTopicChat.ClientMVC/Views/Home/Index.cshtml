@model WebTopicChat.ClientMVC.Models.Client
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebTopicChat.ClientMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebTopicChat.ClientMVC.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js"></script>
</head>
<body class="p-4">
    <div class="col-md-12 col-lg-12 col-xl-12 text-white text-center mt-5">
        WELCOME TO <br /> OUR TOPIC-CHAT WEB
    </div>
    <form id="login-form "class="form1 mt-5 mb-4" asp-action="Auth" method="post">
        <h5 class="text-center font14">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
        </h5>
        <div>
            <input id="username" class="form-control mr-sm-2 m-1" type="text" asp-for="UserName" placeholder="Username" required/>
            <span id="lbusername" class="text-danger"></span>
        </div>
        <div>
            <input id="password" class="form-control mr-sm-2 m-1" asp-for="Password" placeholder="Password" required/>
            <span id="lbpassword" class="text-danger"></span>
        </div>
        <button class="form-control mr-sm-2 m-1 f" style="width:100px" type="submit">Login</button>
    </form>
    <div>
        <div class="text-center text-white mt-0">
            <div class="font">
                Don't have an account?
                <a class="text-primary" data-bs-toggle="modal" data-bs-target="#modalForm"> 
                    Sign up
                </a>
            </div>
            <div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-center text-black fw-bold" id="exampleModalLabel">SIGN UP</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Regist" method="post">
                                <div class="text-centerc font14">
                                    @if (ViewBag.ErrorMessage1 != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.ErrorMessage1</div>
                                    }
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="userName" placeholder="Your username" required/>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="password" placeholder="Your password" required/>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="displayName" placeholder="Your displayname" required/>
                                </div>
                                <div class="modal-footer d-block">
                                    <button type="submit" class="btn btn-warning float-end">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    @Html.Raw(ViewBag.Script)
</script>

